# ---- Database (Aurora PostgreSQL) ----
DB_HOST=your-aurora-endpoint.rds.amazonaws.com
DB_PORT=5432
DB_NAME=postgres
DB_USER=appuser
DB_PWD=your-strong-password
# Use 'require' when your Aurora parameter group enforces SSL.
DB_SSLMODE=require

# ---- Flask session secret (set in ECS or EB) ----
SECRET_KEY=change-this-to-a-strong-random-string
