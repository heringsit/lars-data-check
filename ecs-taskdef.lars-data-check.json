{
  "family": "lars-data-check",
  "networkMode": "awsvpc",
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX",
    "cpuArchitecture": "X86_64"
  },
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::757824880057:role/ecsTaskExecutionRole-ssm",
  "taskRoleArn": "arn:aws:iam::757824880057:role/lars-app-task-role",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "757824880057.dkr.ecr.ap-northeast-2.amazonaws.com/lars-data-check:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        { "name": "DB_HOST", "value": "lars-db.cuepfzx9q984.ap-northeast-2.rds.amazonaws.com" },
        { "name": "DB_PORT", "value": "5432" },
        { "name": "DB_NAME", "value": "postgres" },
        { "name": "DB_USER", "value": "postgres" },
        { "name": "DB_SSLMODE", "value": "require" },
        { "name": "FLASK_ENV", "value": "production" }
      ],
      "secrets": [
        {
          "name": "DB_PWD",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:757824880057:parameter/herings/lars-data-check/DB_PWD"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:757824880057:parameter/herings/lars-data-check/SECRET_KEY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lars-data-check",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "app"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import urllib.request,sys; sys.exit(0) if urllib.request.urlopen('http://127.0.0.1:8080/healthz', timeout=3).getcode()==200 else sys.exit(1)\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }

    }
  ]
}
